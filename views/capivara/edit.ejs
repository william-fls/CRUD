<h1>Editar capivara</h1>
<form action="/capivara/<%= capivara.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= capivara.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" required><%= capivara.descricao %></textarea>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>