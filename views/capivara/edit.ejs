<h1>Editar capivara</h1>
<form action="/capivara/<%= capivara.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= usuarios.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">descricao</label>
        <input type="descricao" class="form-control" id="descricao" name="descricao" value="<%= capivara.descricao %>" required>
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select class="form-control" id="role" name="role" required>
            <option value="admin" <%= usuarios.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="usuarios" <%= usuarios.role === 'usuarios' ? 'selected' : '' %>>Usuarios</option>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
